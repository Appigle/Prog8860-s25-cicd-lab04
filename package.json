{
  "name": "ray-az-func-app",
  "version": "1.0.0",
  "description": "Azure Function App with CI/CD",
  "main": "src/functions/*.js",
  "scripts": {
    "start": "func start",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@azure/functions": "^4.0.0"
  },
  "devDependencies": {
    "azure-functions-core-tools": "^4.x",
    "jest": "^30.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**"
    ],
    "setupFilesAfterEnv": []
  }
}